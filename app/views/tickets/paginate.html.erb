<h1>Tickets</h1>

<% @tickets.each do |ticket| %>
<div><%= ticket['id'] %></div>
<div><%= ticket['created_at'] %></div>
<div><%= ticket['updated_at'] %></div>
<div><%= ticket['subject'] %></div>
<div><%= ticket['description'] %></div>
<%= link_to "Ticket", ticket_path(ticket['id']) %>
<% end %>

<% if @response['previous_page'] == nil%>
  <%= link_to "Next page", paginate_path(@response_for_page + 1)  %>
<% elsif  @response['next_page'] == nil %>
  <%= link_to "Previous Page", paginate_path(@response_for_page - 1) %>
<% else %>
  <%= link_to "Previous Page", paginate_path(@response_for_page - 1)%>
  <%= link_to "Next page" , paginate_path(@response_for_page + 1)  %>
<% end %>