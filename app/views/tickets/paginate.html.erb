<div class="tickets-container <%= render partial: "layouts/background" %>">
  <nav class="home-nav">
    <%# <%= link_to "z", root_path, class: "tickets-nav" %>
    <a href="/tickets/pages/1" class="tickets-nav-icon">
       <%= image_tag("zendesk-medium-textless.png", class: "zendesk-icon-sizing") %>
    </a>
  </nav>
  <h1 class="all-tickets-header">Tickets</h1>

  <% @tickets.each do |ticket| %>
    <div><%= ticket['id'] %></div>
    <div><%= ticket['created_at'].split("T")[0] %></div>
    <div><%= ticket['created_at'].split("T")[1].split("Z")[0] %></div>
    <div><%= ticket['subject'] %></div>
    <div><%= ticket['description'] %></div>
    <%= link_to "Ticket", ticket_path(ticket['id']) %>
  <% end %>

  <% if @response['previous_page'] == nil %>
    <%= link_to "Next page", paginate_path(@page_number + 1)  %>
  <% elsif  @response['next_page'] == nil %>
    <%= link_to "Previous Page", paginate_path(@page_number - 1) %>
  <% else %>
    <%= link_to "Previous Page", paginate_path(@page_number - 1)%>
    <%= link_to "Next page" , paginate_path(@page_number + 1)  %>
  <% end %>
</div>